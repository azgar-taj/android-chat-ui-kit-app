<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Notifications"
            android:textSize="@dimen/name"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Switch
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="openAdminListScreen"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Administrators"
            android:textSize="@dimen/name"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_admin_count"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/ic_arrow_right_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/light_grey"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/preference_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="16dp"
            android:text="MEMBERS"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:onClick="addMembers"
            android:clickable="true"
            android:paddingLeft="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/ivNotification"
                android:src="@drawable/ic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@+id/ivNotification"
                android:layout_marginLeft="16dp"
                android:text="Add Members"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:id="@+id/member_list"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/more_members"
            android:paddingLeft="18dp"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ivMore"
                android:src="@drawable/ic_arrow_down_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@+id/ivMore"
                android:layout_marginLeft="16dp"
                android:text="View More"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:id="@+id/tvSeprator"
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_height="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/other_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Privacy &amp; Support"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:onClick="exitGroup"
            android:textColor="@color/catalyst_redbox_background"
            android:text="Delete and Exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="@color/catalyst_redbox_background"
            android:text="Report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>