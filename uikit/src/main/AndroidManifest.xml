<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cometchat.pro.uikit">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">

        <activity android:name="screen.CometChatCreateGroupScreenActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="screen.CometChatMorePrivacyScreen" />

        <activity android:name="screen.CometChatBlockUserListScreenActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="screen.CometChatGroupDetailScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name="screen.CometChatAddMemberScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="screen.CometChatAdminListScreenActivity"
            android:screenOrientation="portrait" />
        <activity
        android:name="screen.CometChatForwardMessageScreen"
        android:screenOrientation="portrait" />
        <activity
            android:name="screen.CometChatGroupMemberListScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="screen.CometChatUnified"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="screen.CometChatUserDetailScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="screen.CometChatMessageListActivity"
            android:parentActivityName="screen.CometChatUnified"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.cometchat.pro.uikit.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>