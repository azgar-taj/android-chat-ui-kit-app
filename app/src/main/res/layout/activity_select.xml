<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="8dp"
        android:gravity="center"
        tools:context=".SelectActivity">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/directIntent"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_width="match_parent"
                app:rippleColor="@color/colorAccent"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginTop="16dp"
                        android:src="@drawable/project"
                        android:layout_width="48dp"
                        android:layout_gravity="center"
                        android:layout_height="48dp"/>
                    <TextView
                        android:drawablePadding="10dp"
                        android:textColor="@color/primaryTextColor"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"
                        android:text="UI Unified"
                        style="@style/TextAppearance.MaterialComponents.Headline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:textColor="@color/primaryTextColor"
                        android:text="It open's Activity dorectly from UI Library. It is predifined UI helpful for user to build chat system by integrating it within minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginBottom="5dp"
                        android:background="@color/menu_background_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/directLaunch"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:text="Launch"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/usingScreen"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/textColorWhite"
            android:layout_width="match_parent"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:rippleColor="@color/colorAccent"
            app:state_dragged="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/smartphone"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:drawablePadding="10dp"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="UI Screens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/primaryTextColor"
                    android:text="It open's Screen Activity where user can use predefined screen present in library. User can create their own app using screen in few minutes."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                 <RadioGroup
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:id="@+id/screenselector"
                        android:layout_margin="16dp"
                        android:background="@drawable/cc_circular_edt_background"
                        android:backgroundTint="@color/light_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/users"
                            android:padding="8dp"
                            android:background="@drawable/radiobuttonbackground"
                            android:button="@android:color/transparent"
                            android:text="Users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/groups"
                            android:padding="8dp"
                            android:background="@drawable/radiobuttonbackground"
                            android:button="@android:color/transparent"
                            android:text="Groups"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/conversations"
                            android:padding="8dp"
                            android:background="@drawable/radiobuttonbackground"
                            android:button="@android:color/transparent"
                            android:text="Conversations"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/moreinfo"
                            android:padding="8dp"
                            android:background="@drawable/radiobuttonbackground"
                            android:button="@android:color/transparent"
                            android:text="More Info"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                <View
                    android:layout_marginBottom="5dp"
                    android:background="@color/menu_background_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/fragmentlaunch"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_horizontal"
                        android:text="Navigate"
                        android:textStyle="bold"

                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/usingComponent"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            app:rippleColor="@color/colorAccent"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="16dp"
                    android:src="@drawable/wall"
                    android:layout_width="48dp"
                    android:layout_gravity="center"
                    android:layout_height="48dp"/>
                <TextView
                    android:drawablePadding="10dp"
                    android:textColor="@color/primaryTextColor"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="UI Components"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/primaryTextColor"
                    android:text="It show's list of component which users can use at their end to create thier own chat app within minutes/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginBottom="5dp"
                    android:background="@color/menu_background_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/componentLaunch"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="@color/colorPrimary"
                    android:text="Navigate"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            android:layout_margin="8dp"
            app:backgroundTint="@android:color/white"
            android:layout_width="match_parent"
            app:rippleColor="@color/colorAccent"
            app:elevation="4dp"
            android:text="Logout"
            android:textStyle="bold"
            android:textColor="@color/red"
            app:cornerRadius="12dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>